<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRootDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.iris.ui.home.MainActivity"
    >

  <!-- The main content view -->
  <RelativeLayout
      android:id="@+id/homeContentRelativeLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <android.support.v4.view.ViewPager
        android:id="@+id/homeViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/homeBackgroundColor"
        android:clipToPadding="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        />

  </RelativeLayout>

  <!-- The navigation drawer -->
  <include layout="@layout/drawer_layout"/>

  <RelativeLayout
      android:id="@+id/progressBarRelativeLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/darker_gray"
      >
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
  </RelativeLayout>
</android.support.v4.widget.DrawerLayout>


